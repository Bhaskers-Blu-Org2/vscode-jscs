{
	"name": "jscs",
	"description": "jscs",
	"version": "0.0.1",
	"publisher": "vscode",
	"engines": {
		"vscode": "*"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"command:extension.sayHello"
	],
	"main": "./out/extension",
	"contributes": {
		"commands"
			: [{
				"command": "extension.sayHello",
				"title": "jscs linter command"
			}
		],
		"configuration": {
			"type": "object",
			"title": "JSCS configuration options",
			"properties": {
				"jscs.enable": {
					"type": "boolean",
					"default": false,
					"description": "Control whether JSCS is enabled for JavaScript files or not."
				},
				"jscs.preset": {
					"type": "string",
					"default": "",
					"description": "The JSCS preset to use. Possible values: \"airbnb\", \"crockford\", \"google\", \"grunt\", \"idiomatic\", \"jquery\", \"mdcs\", \"node-style-guide\", \"wikimedia\", \"wordpress\", \"yandex\""
				},
				"jscs.disableIfNoConfig": {
					"type": "boolean",
					"default": false,
					"description": "Disable JSCS if no configuration file found."
				},
				"jscs.configuration": {
					"type": "object",
					"default": "",
					"description": "A JSCS configuration object"
				}


			}
		}
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"vscode": "next"
	},
	"dependencies": {
		"vscode-languageclient": "next"
	}
}